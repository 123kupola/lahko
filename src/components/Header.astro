
---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import { getLangFromUrl, useTranslations, defaultLang, languages } from '../utils/i18n';

import si from '../i18n/si.json';
import en from '../i18n/en.json';
import hr from '../i18n/hr.json';

const ui = {
  en,
  si,
  hr,
};

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang, ui);

const getLanguageSwitcherLink = (targetLang: keyof typeof languages) => {
	const basePath = Astro.url.pathname.startsWith(`/${lang}`)
		? Astro.url.pathname.substring(`/${lang}`.length)
		: Astro.url.pathname;

	let path = basePath;
	// If we are on a contact page, use the correct slug for the target language
	if (basePath === '/contact' || basePath === '/kontakt') {
		path = targetLang === 'en' ? '/contact' : '/kontakt';
	}

	if (targetLang === defaultLang) {
		return path || '/'; // Ensure root path is returned correctly
	}
	return `/${targetLang}${path}`;
};

const getLink = (targetLang: keyof typeof languages, path: string) => {
	if (targetLang === defaultLang) {
		return path;
	}
	return `/${targetLang}${path}`;
};
---

<header>
	<nav>
		<a href={getLink(lang, '/')} class="logo-link">
			<img src="/plumber.png" alt={`${SITE_TITLE} logo`} width="40" height="40" />
			<span class="sr-only">{SITE_TITLE}</span>
		</a>
		<div class="internal-links">
			<HeaderLink href={getLink(lang, '/')}>{t('nav.home')}</HeaderLink>
			<HeaderLink href={getLink(lang, '/blog')}>{t('nav.blog')}</HeaderLink>
			<HeaderLink href={getLink(lang, '/about')}>{t('nav.about')}</HeaderLink>
			<HeaderLink href={getLink(lang, lang === 'en' ? '/contact' : '/kontakt')}>{t('nav.contact')}</HeaderLink>
		</div>
		<div class="language-switcher">
			<a href={getLanguageSwitcherLink('si')} class="lang-link" title="SlovenÅ¡Äina">
				{lang === 'si' ? <span class="active">Si</span> : 'ðŸ‡¸ðŸ‡®'}
			</a>
			<a href={getLanguageSwitcherLink('hr')} class="lang-link" title="Hrvatski">
				{lang === 'hr' ? <span class="active">Hr</span> : 'ðŸ‡­ðŸ‡·'}
			</a>
			<a href={getLanguageSwitcherLink('en')} class="lang-link" title="English">
				{lang === 'en' ? <span class="active">En</span> : 'ðŸ‡¬ðŸ‡§'}
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	.logo-link {
		display: flex;
		align-items: center;
		padding: 0.5em 0;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.language-switcher {
		display: flex;
		gap: 0.5em;
	}
	.lang-link {
		font-size: 1.2em;
		padding: 0.5em;
		transition: background-color 0.2s ease;
		text-decoration: none;
	}
	.lang-link:hover {
		background-color: rgba(var(--gray), 0.1);
	}
	.lang-link span {
		padding: 0.5em;
		border-radius: 4px;
	}
	.lang-link span.active {
		background-color: rgba(var(--accent), 0.3);
		border-bottom: 2px solid rgb(var(--accent));
		border-radius: 4px;
	}
	@media (max-width: 720px) {
		.language-switcher {
			display: none;
		}
	}
</style>

