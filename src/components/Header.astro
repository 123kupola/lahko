
---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import { getLangFromUrl, useTranslations } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const getLink = (path: string) => {
	if (lang === 'si') {
		return path;
	}
	return `/${lang}${path}`;
};
---

<header>
	<nav>
		<h2><a href={getLink('/')}>{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href={getLink('/')}>{t('nav.home')}</HeaderLink>
			<HeaderLink href={getLink('/blog')}>{t('nav.blog')}</HeaderLink>
			<HeaderLink href={getLink('/about')}>{t('nav.about')}</HeaderLink>
		</div>
		<div class="language-switcher">
			<a href="/" class="lang-link" title="SlovenÅ¡Äina">
				{lang === 'si' ? <span class="active">Si</span> : 'ðŸ‡¸ðŸ‡®'}
			</a>
			<a href="/hr" class="lang-link" title="Hrvatski">
				{lang === 'hr' ? <span class="active">Hr</span> : 'ðŸ‡­ðŸ‡·'}
			</a>
			<a href="/en" class="lang-link" title="English">
				{lang === 'en' ? <span class="active">En</span> : 'ðŸ‡¬ðŸ‡§'}
			</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.language-switcher {
		display: flex;
		gap: 0.5em;
	}
	.lang-link {
		font-size: 1.2em;
		padding: 0.5em;
		transition: background-color 0.2s ease;
		text-decoration: none;
	}
	.lang-link:hover {
		background-color: rgba(var(--gray), 0.1);
	}
	.lang-link span {
		padding: 0.5em;
		border-radius: 4px;
	}
	.lang-link span.active {
		background-color: rgba(var(--accent), 0.3);
		border-bottom: 2px solid rgb(var(--accent));
		border-radius: 4px;
	}
	@media (max-width: 720px) {
		.language-switcher {
			display: none;
		}
	}
</style>

