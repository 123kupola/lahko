---
import { Icon } from 'astro-icon/components';

interface Props {
	t: (key: string) => string;
}

const { t } = Astro.props;
---

<section class="bg-white dark:bg-gray-900">
  <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
    <div class="max-w-screen-md mb-8 lg:mb-16">
      <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">{t('home.features.title')}</h2>
      <p class="text-gray-500 sm:text-xl dark:text-gray-400">{t('home.features.subtitle')}</p>
    </div>
    <div class="space-y-8 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-12 md:space-y-0">
      <div>
        <div class="flex justify-center items-center mb-4 w-10 h-10 rounded-full bg-primary-100 lg:h-12 lg:w-12 dark:bg-primary-900">
          <Icon name="mdi:wrench" class="w-5 h-5 text-primary-600 lg:w-6 lg:h-6 dark:text-primary-300" />
        </div>
        <h3 class="mb-2 text-xl font-bold dark:text-white">{t('home.feature1.title')}</h3>
        <p class="text-gray-500 dark:text-gray-400">{t('home.feature1.desc')}</p>
      </div>
      <div>
        <div class="flex justify-center items-center mb-4 w-10 h-10 rounded-full bg-primary-100 lg:h-12 lg:w-12 dark:bg-primary-900">
          <Icon name="mdi:account-group" class="w-5 h-5 text-primary-600 lg:w-6 lg:h-6 dark:text-primary-300" />
        </div>
        <h3 class="mb-2 text-xl font-bold dark:text-white">{t('home.feature2.title')}</h3>
        <p class="text-gray-500 dark:text-gray-400">{t('home.feature2.desc')}</p>
      </div>
      <div>
        <div class="flex justify-center items-center mb-4 w-10 h-10 rounded-full bg-primary-100 lg:h-12 lg:w-12 dark:bg-primary-900">
          <Icon name="mdi:timer-sand" class="w-5 h-5 text-primary-600 lg:w-6 lg:h-6 dark:text-primary-300" />
        </div>
        <h3 class="mb-2 text-xl font-bold dark:text-white">{t('home.feature3.title')}</h3>
        <p class="text-gray-500 dark:text-gray-400">{t('home.feature3.desc')}</p>
      </div>
    </div>
  </div>
</section>
